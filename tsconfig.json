{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@utils/*": ["src/utils/*"],
      "@digestEngine/*": ["scripts/digestEngine/*"],
      "@scripts/*": ["scripts/*"]
    }
  },
  "ts-node": {
    "esm": true
  },
  "include": ["src", "scripts", "types"]
}